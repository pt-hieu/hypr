    (label :class "dash-panel-title" :text "STORAGE")
    (box :class "dash-storage-item" :orientation "v" :space-evenly false
      (box :orientation "h" :space-evenly false
        (label :class "dash-icon" :text "󰋊")
        (label :class "dash-label" :text "Root (btrfs)"))
      (dash-progress :value disk_root_used :max disk_root_total :class "purple")
      (label :class "dash-storage-detail" :text "${disk_root_used}G / ${disk_root_total}G"))
    (box :class "dash-storage-item" :orientation "v" :space-evenly false
      (box :orientation "h" :space-evenly false
        (label :class "dash-icon" :text "󰋊")
        (label :class "dash-label" :text "Boot"))
      (dash-progress :value disk_boot_used :max disk_boot_total :class "purple")
      (label :class "dash-storage-detail" :text "${disk_boot_used}M / ${disk_boot_total}M"))))

; Memory Panel
(defwidget memory-panel []
  (box :class "dash-panel" :orientation "v" :space-evenly false
    (label :class "dash-panel-title" :text "MEMORY")
    (box :class "dash-storage-item" :orientation "v" :space-evenly false
      (box :orientation "h" :space-evenly false
