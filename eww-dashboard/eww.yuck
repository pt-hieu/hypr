      (label :class "dash-icon ${pkg_updates > 0 ? 'updates' : ''}" :text "󰚰")
      (label :class "dash-label" :text "Updates")
      (label :class "dash-value ${pkg_updates > 0 ? 'updates' : ''}" :text pkg_updates))))

