; Main Dashboard Grid
(defwidget dashboard-content []
  (box :class "dashboard-container" :orientation "v" :space-evenly false
    (box :class "dashboard-row" :orientation "h" :space-evenly true
      (system-panel)
      (cpu-panel)
      (gpu-panel))
    (box :class "dashboard-row" :orientation "h" :space-evenly true
      (storage-panel)
      (memory-panel)
      (network-panel))
    (box :class "dashboard-row" :orientation "h" :space-evenly true
      (services-panel)
      (packages-panel)
      (io-panel))))

; Dashboard Window
(defwindow dashboard
  :monitor 0
  :geometry (geometry :width "70%" :height "60%" :anchor "center")
  :stacking "bottom"
  :exclusive false
  :focusable false
  (dashboard-content))
